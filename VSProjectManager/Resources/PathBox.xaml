<UserControl x:Class="VSProjectManager.PathBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VSProjectManager"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    <Grid>
        <Border>
            <DockPanel>
                <Button Style="{StaticResource CyberButtonCancel}" Content="X" DockPanel.Dock="Right" HorizontalAlignment="Right" Click="Button_Click" Width="20"/>
                <TextBox x:Name="Path" Style="{StaticResource CyberTextboxNoLine}" Margin="1, -1, 1, -1" HorizontalContentAlignment="Left" Text="C:\"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
