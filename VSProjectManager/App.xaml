<Application x:Class="VSProjectManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VSProjectManager"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml" />
                <ResourceDictionary Source="Resources/TreeViewTemplate.xaml" />
                <ResourceDictionary Source="Resources/DataGridColumnHeaderTemplate.xaml" />
                <ResourceDictionary Source="Resources/ScrollBarTemplate.xaml" />
                <ResourceDictionary Source="Resources/ComboBoxTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
